@page "MenuList"
@model BaristaCoffee.Admin.Pages.MenuModel
@{
}



<div class="row">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="page-title text-center"> Menu </h3>
            </div>
        </div>
    </div>
</div>
@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>ProductName</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.MenuList)
                            {
                                <tbody>

                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Description</td>
                                        <td>@item.CategoryName</td>
                                        <td><label class="badge badge-dark">@item.Price</label></td>
                                        <td>
                                            <button class="btn btn-success btn-sm">Update</button>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>

                                </tbody>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


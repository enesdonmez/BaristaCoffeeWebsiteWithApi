@page "TestimonialList"
@model BaristaCoffee.Admin.Pages.TestimonialModel
@{
}


<div class="row">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="page-title text-center"> Testimonials </h3>
            </div>
        </div>
    </div>
</div>

@{
    if (Model != null)
    {

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hovered">
                                <thead>
                                    <tr>
                                        <th> Id </th>
                                        <th> Name </th>
                                        <th> Image </th>
                                        <th> Comment </th>
                                        <th> Rating </th>
                                        <th> Actions </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.TestimonialList)
                                {
                                    <tbody>
                                        <tr>

                                            <td>@item.Id</td>
                                            <td>
                                                @item.TestimonialName
                                            </td>
                                            <td class="py-1">
                                                <img src="@item.Image" alt="image" />
                                            </td>
                                            <td> @item.Comment </td>
                                            <td> @item.Rating </td>
                                            <td>
                                                <button class="btn btn-success btn-sm">Update</button>
                                                <button class="btn btn-danger btn-sm">Delete</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }

}
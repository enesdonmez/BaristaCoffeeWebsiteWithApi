@page
@model BaristaCoffee.Admin.Pages.MenuCategoryModel
@{
}


<div class="row">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="page-title text-center"> Menu Categories </h3>
            </div>
        </div>
    </div>
</div>

@{
    if (Model != null)
    {

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive">
                                <thead>
                                    <tr>
                                        <th> Id </th>
                                        <th> Name </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.MenuCategories)
                                {
                                    <tbody>
                                        <tr>

                                            <td>@item.Id</td>
                                            <td>
                                                @item.CategoryName
                                            </td>
                                            <td>
                                              <button class="btn btn-success btn-sm">Update</button>
                                                <button class="btn btn-danger btn-sm">Delete</button>
                                            </td>
                                            
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }

}

<a asp-page="CreateMenuCategory" class="btn btn-primary">Create</a>

@page "ContactList"
@model BaristaCoffee.Admin.Pages.ContactModel
@{
}


<div class="row">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="page-title text-center"> Contact </h3>
            </div>
        </div>
    </div>
</div>

@{
    if (Model != null)
    {

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th> Id </th>
                                        <th> Name </th>
                                        <th> Email </th>
                                        <th> Message </th>
                                        <th> IsActive </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.Contacts)
                                {
                                    <tbody>

                                        <tr>
                                            <td>
                                                @item.Id
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                                @item.Email
                                            <td>
                                                @item.Message
                                            </td>
                                            <td> Active </td>
                                        </tr>

                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }

}

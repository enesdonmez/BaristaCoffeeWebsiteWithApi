@page "BaristaList"
@model BaristaCoffee.Admin.Pages.BaristaModel
@{
}

<div class="row">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="page-title text-center"> Baristas </h3>
            </div>
        </div>
    </div>
</div>

@{
    if (Model != null)
    {

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th> Id </th>
                                        <th> Name </th>
                                        <th> Image </th>
                                        <th> Type </th>
                                        <th> IsActive </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.Baristas)
                                {
                                    <tbody>
                                        <tr>

                                            <td>@item.Id</td>
                                            <td>
                                                @item.BaristaName
                                            </td>
                                            <td class="py-1">
                                                <img src="@item.ImageUrl" alt="image" />
                                            </td>
                                            <td> Barista </td>
                                            <td> Active </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }

}
